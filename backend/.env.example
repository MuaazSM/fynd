# Database
DATABASE_URL=postgresql+psycopg://postgres:password@localhost:5432/app_db

# Application
MAX_REVIEW_CHARS=4000
LOG_LEVEL=INFO

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# JWT Configuration
JWT_SECRET=change_this_secret_key_to_something_random_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# LLM Configuration
LLM_PROVIDER=mock
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4
LLM_BASE_URL=
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=2

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Test Database (for pytest)
DATABASE_URL_TEST=postgresql+psycopg://postgres:password@localhost:5432/app_db_test
